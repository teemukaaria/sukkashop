{
  "name": "sukkashop",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "devserver": "live-server",
    "compile:scss": "node-sass -wr sass/main.scss css/style.css",
    "start": "run-p compile:scss devserver",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "deploy": "node deploy-ssh.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teemukaaria/sukkashop.git"
  },
  "author": "Teemu Kääriä",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teemukaaria/sukkashop/issues"
  },
  "homepage": "https://github.com/teemukaaria/sukkashop#readme",
  "devDependencies": {
    "autoprefixer": "^8.5.2",
    "node-sass": "^4.9.0",
    "node-ssh": "^5.1.1",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.0"
  }
}
